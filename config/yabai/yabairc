yabai -m config layout bsp
yabai -m config --space 7 layout float
yabai -m config window_placement second_child


# Spacing around windows
yabai -m config top_padding 5 
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 5

# Border color
yabai -m config window_border on
yabai -m config normal_window_border_color 0x00FFBF00
yabai -m config active_window_border_color 0xFFFFBF00
yabai -m config window_shadow off
yabai -m config window_border_blur off

yabai -m config mouse_follows_focus off
yabai -m config mouse_modifier ctrl
yabai -m config mouse_action1 move # left click
yabai -m config mouse_action2 resize # right click
yabai -m mouse_drop_action swap

# # Ignore programs
# yabai -m rule --add app="^System Preferences$" sticky=on
yabai -m rule --add app="^Réglages Système$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Alfred Preferences$" manage=off
yabai -m rule --add app="^Web Inspector.*" manage=off
yabai -m rule --add app="^Slack*" manage=off
yabai -m rule --add app="^VLC*" manage=off
yabai -m rule --add app="^DevToys$" manage=off
yabai -m rule --add app="Code" manage=off
yabai -m rule --add app="Codium" manage=off
